// Define the SQLite datasource
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Define the Hashtag model
model Hashtag {
  id              String    @id
  name            String
  countryCode     String
  posts           Int
  rank            Int
  latestTrending  Boolean
  views           BigInt
  isPromoted      Boolean
  trendingType    Int
  createdAt       DateTime
  trend: PrismaTrend[]; // Ensure `trend` is included
}

// Define the Trend model
model Trend {
  id          Int      @id @default(autoincrement())
  hashtagId   String
  time        Int
  value       Int
  hashtag     Hashtag @relation(fields: [hashtagId], references: [id])
}
